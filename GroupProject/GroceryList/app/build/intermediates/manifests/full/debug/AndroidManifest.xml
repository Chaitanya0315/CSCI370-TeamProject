<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grocerylistmanager.sam.grocerylist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="26" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity android:name="edu.qc.seclass.grocerylist.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.qc.seclass.grocerylist.AddNewList"
            android:label="Add New List"
            android:parentActivityName="edu.qc.seclass.grocerylist.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="edu.qc.seclass.grocerylist.ItemList"
            android:parentActivityName="edu.qc.seclass.grocerylist.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="edu.qc.seclass.grocerylist.Search"
            android:label="Search" >
        </activity>
        <activity android:name="edu.qc.seclass.grocerylist.Result" >
        </activity>
        <activity
            android:name="edu.qc.seclass.grocerylist.Pop"
            android:theme="@style/pop_up" />
        <activity
            android:name="edu.qc.seclass.grocerylist.changeAmount"
            android:theme="@style/pop_up" />
        <activity
            android:name="edu.qc.seclass.grocerylist.createNew"
            android:label="Create New item" >
        </activity>
        <activity
            android:name="edu.qc.seclass.grocerylist.addItem"
            android:theme="@style/pop_up" />

        <meta-data
            android:name="android.support.VERSION"
            android:value="26.1.0" />
        <meta-data
            android:name="android.arch.lifecycle.VERSION"
            android:value="27.0.0-SNAPSHOT" />
    </application>

</manifest>